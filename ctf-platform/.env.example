# 应用配置
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# MySQL数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=ctf_user
MYSQL_PASSWORD=ctf_password_123
MYSQL_DATABASE=ctf_platform

# 平台配置
PLATFORM_NAME="My CTF Platform"
PLATFORM_DESCRIPTION="A custom CTF platform"
REGISTRATION_OPEN=true
REQUIRE_EMAIL_VERIFICATION=false

# 邮件配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourctfplatform.com

# Flag配置
FLAG_PREFIX=CTF
FLAG_FORMAT=static
FLAG_CASE_SENSITIVE=false

# 积分配置
SCORING_SYSTEM=dynamic
BASE_POINTS=1000
BLOOD_BONUS_ENABLED=true

# 管理员配置
ADMIN_USERNAMES=admin